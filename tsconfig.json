{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": false,
    "typeRoots": ["node_modules/@types", "./src/@types"],
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@configs/*": ["./configs/*"],
      "@constants/*": ["./constants/*"],
      "@containers/*": ["./containers/*"],
      "@contexts/*": ["./contexts/*"],
      "@helpers/*": ["./helpers/*"],
      "@hooks/*": ["./hooks/*"],
      "@i18n/*": ["./i18n/*"],
      "@routes/*": ["./routes/*"],
      "@screens/*": ["./screens/*"],
      "@services/*": ["./services/*"],
      "@src/*": ["./*"],
      "@store/*": ["./store/*"],
      "@styles/*": ["./styles/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
